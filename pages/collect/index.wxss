.collect_main {
  background-color: #f3f4f6;
}
.collect_main .main_title {
  padding: 40rpx 0;
}
.collect_main .main_title .title_item {
  background-color: #fff;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  margin-left: 10rpx;
}
.collect_main .main_title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
.collect_main navigator {
  border-bottom: 1px solid #ccc;
  display: flex;
  background-color: #fff;
}
.collect_main navigator .goods_img_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_main navigator .goods_img_warp image {
  width: 70%;
}
.collect_main navigator .goods_con_warp {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main navigator .goods_con_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.collect_main navigator .goods_con_warp .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
